@charset "UTF-8";

@import 'compass';
@import 'compass/reset';
@import 'vendor/mo';
@import 'vendor/prettify/prettify';
@import 'vendor/prettify/marionette';
@import 'variables';

<%= Rouge::Themes::Base16::Solarized.render(:scope => '.highlight') %>

$block: 10px;
$border: rgb(232, 232, 232);
$font: #414141;

* {
  -webkit-font-smoothing: antialiased;
  @include box-sizing("border-box");
}

html {
  background: #26272b;
  font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
}

*[class*="docs__"] {
  float: left;
}

.docs {
  margin:     0 auto;
  padding:    $block;
  position:   relative;
  max-width:  1000px;
}

.docs__sidebar {
  width:    20%;
  padding:  50px 0;
  @include  pos(fixed, 0);
}

.docs__content {
  width:        80%;
  background:   #ffffff;
  margin-left:  20%;
  padding: 0 $block*3 $block*3;
  position: relative;
  z-index: 2;
  color: $font;

  @include border-radius(2px);

  h1, h2, h3, h4, h5, h6 {
    font-size: 22px;
    margin: $block*3 0;
    border-bottom: solid 1px $border;
    padding-bottom: $block;
  }

  ul {
    margin: $block 0;
    li {
      margin-top: $block;
      font-size: 13px;

      a {
        text-decoration: none;
        border-bottom: solid 1px $border;
      }

      ul {
        margin-left: $block*2;
      }
    }
  }

  p {
    font-size: 15px;
    line-height: 25px;
  }

  code {
    font-family: monospace;
    background: #F6F6F5;
    padding: 4px;
    color: $font;
  }

  .highlight .err {
    color: $font;
    background-color: transparent;
  }

  pre {
    font-family: monospace;
    padding: $block*2;
    background: rgb(252, 252, 252);
    margin: $block*2 0;
    border-radius: 2px;
    border: solid 1px #E8E8E8;
    word-wrap: break-word;
  }

  a {
    color: #2F2F2F;
    font-size: 14px;
    text-decoration: none;
  }
}

nav {
  a, h3 {
    color: #FFF;
    font-size: 14px;
  }

  a h3 {
    margin: 0
  }

  a {
    margin-bottom: $block;
    display: block;
    text-decoration: none;

    h3 {
      font-weight: bold;
    }
  }
}