<html>
  <head>
    <link rel="stylesheet" href="../api-assets/main.css">
  </head>
  <body>
    <div class="docs__sidebar">
      <h3>Classes</h3>
      <ul>
        {{#each classes}}
          <li><a href="/api/{{name}}.html">{{name}}</a></li>
        {{/each}}
      </ul>

      <h3>Functions</h3>
      <ul>
        {{#each functions}}
          <li><a href="#{{@key}}">{{@key}}</a></li>
        {{/each}}
      </ul>

      <h3>Properties</h3>
      <ul>
        {{#each properties}}
          <li><a href="#{{@key}}">{{@key}}</a></li>
        {{/each}}
      </ul>
    </div>

    <div class="docs__content">
        <h2>Functions</h2>
        {{#each functions}}
          <div class="function_block">
            {{#with description}}
              <div class="function_signature">
                <a href="#{{@key}}"><h3>&#x25cf; {{@key}}({{paramStr}})</h3></a>
              </div>
              {{{description.full}}}

              {{#if params}}
                <div class="params">
                  <h4>Params</h4>
                  {{#each params}}
                    <div class="param">
                      <span class="param-name">{{name}}</span>
                      <span class="param-types">{{#if typeStr}}({{typeStr}}){{/if}}</span>
                      <span class="param-description">{{#if description}} &nbsp; {{description}} {{/if}}</span>
                    </div>
                  {{/each}}
                </div>
              {{/if}}
            {{/with}}

            {{#if examples}}
              <h4>Examples</h4>
              {{#each examples}}
                <div class="example_block">
                  <h4>{{name}}</h4>
                  {{{example}}}
                </div>
              {{/each}}
            {{/if}}
          </div>
        {{/each}}
        
        {{#if properties}}
        <h3> Properties </h3>
        {{#each properties}} 
          <div class="property_block">
            {{#with description}}
              <div class="property">
                <a href="#{{@key}}"><h3>&#x25cf; {{@key}}</h3></a>
              </div>
              {{{description.full}}}
            {{/with}}

            {{#if examples}}
              <h4>Examples</h4>
              {{#each examples}}
                <div class="example_block">
                  <h4>{{name}}</h4>
                  {{{example}}}
                </div>
              {{/each}}
            {{/if}}
          </div>
        {{/each}}
        {{/if}}
      </div>
  </body>
</html>
